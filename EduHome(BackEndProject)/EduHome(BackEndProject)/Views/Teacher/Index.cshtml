@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}
@await Component.InvokeAsync("Banner");
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div> 
        <div class="row">
            @foreach (var teacher in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                        <a asp-action="Details" asp-route-id=@teacher.Id><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>  
                    </div>
                    <div class="single-teacher-content text-center">
                        <h2><a asp-action="Details" asp-route-id=@teacher.Id>@teacher.Name</a></h2>
                        <h4>@teacher.Profession</h4>
                        <ul>
                            <li><a href="@teacher.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="@teacher.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                            <li><a href="@teacher.LinkedinUrl"><i class="zmdi zmdi-linkedin"></i></a></li>
                            <li><a href="@teacher.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->

