@model Course
@{
    ViewData["Title"] = "Detail";
}

<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Name</h2>
                        <p>@Model.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                @Model.AboutCourse
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                @Model.HowToApply
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                @Model.Certification
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@String.Format("{0:MMM d, yyyy}",   Model.StartDate)</span></li>
                                <li>duration <span>@Model.Duration Month</span></li>
                                <li>class duration <span>@Model.ClassDuration hours</span></li>
                                <li>skill level <span>@Model.SkillLevel</span></li>
                                <li>language <span>@Model.Language</span></li>
                                <li>students <span>@Model.StudentsCount</span></li>
                                <li>assesments <span>@Model.Assesments</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.Price</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-30">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>

