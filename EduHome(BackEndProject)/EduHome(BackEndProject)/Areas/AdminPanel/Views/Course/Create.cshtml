@model Course;
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">
                Basic form layout
                </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" placeholder="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea class="form-control" placeholder="Description" asp-for="Description" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutCourse">AboutCourse</label>
                        <textarea class="form-control" placeholder="AboutCourse" asp-for="AboutCourse" rows="4"></textarea>
                        <span asp-validation-for="AboutCourse" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HowToApply">HowToApply</label>
                        <textarea class="form-control" placeholder="HowToApply" asp-for="HowToApply" rows="4"></textarea>
                        <span asp-validation-for="HowToApply" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Certification">Certification</label>
                        <textarea class="form-control" placeholder="Certification" asp-for="Certification" rows="4"></textarea>
                        <span asp-validation-for="Certification" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate">StartDate</label>
                        <input class="form-control" placeholder="StartDate" asp-for="StartDate">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration">Duration</label>
                        <input class="form-control" placeholder="Duration" asp-for="Duration">
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassDuration">ClassDuration</label>
                        <input class="form-control" placeholder="ClassDuration" asp-for="ClassDuration">
                        <span asp-validation-for="ClassDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SkillLevel">SkillLevel</label>
                        <input class="form-control" placeholder="SkillLevel" asp-for="SkillLevel">
                        <span asp-validation-for="SkillLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Language">Language</label>
                        <input class="form-control" placeholder="Language" asp-for="Language">
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentsCount">StudentsCount</label>
                        <input class="form-control" placeholder="StudentsCount" asp-for="StudentsCount">
                        <span asp-validation-for="StudentsCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Assesments">Assesments</label>
                        <input class="form-control" placeholder="Assesments" asp-for="Assesments">
                        <span asp-validation-for="Assesments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input class="form-control" placeholder="Price" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="CategoryDiv">
                        <label asp-for="Category">Category</label>
                        <select class="form-control" name="CategoryId">
                            <option value="0">--Select Category--</option>
                            @foreach (var item in ViewBag.Categories)
                           {
                               <option value="@item.Id">@item.Name</option>
                           }
                        </select>
                    </div>
                    <div class="form-group" id="photoDiv">
                        <label asp-for="Photo">Photo</label>
                        <input class="form-control"  placeholder="Photo" asp-for="Photo" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#Description' ) )
            .catch( error => {
                console.error( error );
            } );
        ClassicEditor
            .create( document.querySelector( '#AboutCourse' ) )
            .catch( error => {
                console.error( error );
            } );
        ClassicEditor
            .create( document.querySelector( '#HowToApply' ) )
            .catch( error => {
                console.error( error );
            } );
        ClassicEditor
            .create( document.querySelector( '#Certification' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
}



