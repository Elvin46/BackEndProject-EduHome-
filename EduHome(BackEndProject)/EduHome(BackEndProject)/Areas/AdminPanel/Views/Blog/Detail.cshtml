@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="row" >
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="col-md-8">
                    <div class="blog-details">
                        <div class="blog-details-img">
                            <img src="~/img/blog/@Model.Image" alt="blog-details">
                        </div>
                        <div class="blog-details-content">
                            <h2>@Model.Title</h2>
                            <h6>By @Model.ByWho  /  @String.Format("{0:MMM d, yyyy}",   Model.Created)  /  <i class="fa fa-comments-o"></i> 4</h6>
                            @Model.Description
                            <h3>Category:@Model.Category.Name</h3>
                        </div>
                    </div>
                </div>
            </div>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>

